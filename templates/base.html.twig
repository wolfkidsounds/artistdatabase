<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Artist Database{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('artistdatabase') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('artistdatabase') }}
        {% endblock %}
    </head>
    <body data-bs-theme="dark">
        {# body_replace can be used to skip the entire layout section #}
        {% block body_replace %}
            <div id="layout_wrapper">
                {% block layout %}
                {% endblock %}
            </div>
        {% endblock %}
    </body>
</html>
